<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:background="@drawable/bottomplayerbg"
    android:padding="5dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/song_cover_image_player_bottom"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="start|center_vertical" />

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/song_title_text_player_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:text="Song name" />

        <TextView
            android:id="@+id/song_subtitle_text_player_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            tools:text="Album" />
    </LinearLayout>

    <androidx.media3.ui.PlayerView
        android:id="@+id/player_view_bottom"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="end|center_vertical"
        android:layout_marginStart="100dp"
        android:background="#00FFFFFF"
        android:visibility="visible"
        app:auto_show="true"
        app:hide_on_touch="false"
        app:show_timeout="0" />

</LinearLayout>
